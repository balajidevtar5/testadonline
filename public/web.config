  <location path="locales/en/translation.json">
    <system.webServer>
      <httpProtocol>
        <customHeaders>
          <add name="Cache-Control" value="no-cache, no-store, must-revalidate" />
          <add name="Pragma" value="no-cache" />
          <add name="Expires" value="0" />
        </customHeaders>
      </httpProtocol>
    </system.webServer>
  </location>
 
  <location path="locales/hi/translation.json">
    <system.webServer>
      <httpProtocol>
        <customHeaders>
          <add name="Cache-Control" value="no-cache, no-store, must-revalidate" />
          <add name="Pragma" value="no-cache" />
          <add name="Expires" value="0" />
        </customHeaders>
      </httpProtocol>
    </system.webServer>
  </location>
 
  <location path="locales/gu/translation.json">
    <system.webServer>
      <httpProtocol>
        <customHeaders>
          <add name="Cache-Control" value="no-cache, no-store, must-revalidate" />
          <add name="Pragma" value="no-cache" />
          <add name="Expires" value="0" />
        </customHeaders>
      </httpProtocol>
    </system.webServer>
  </location>
 
  <system.webServer>
    <rewrite>
      <rules>
        <rule name="Remove www" stopProcessing="true">
          <match url="(.*)" ignoreCase="true" />
          <conditions logicalGrouping="MatchAll">
            <add input="{HTTP_HOST}" pattern="^www\.(.+)$" />
          </conditions>
          <action type="Redirect" url="http://{C:1}/{R:0}" appendQueryString="true"
            redirectType="Permanent" />
        </rule>
        <rule name="Rewrite Requests to API" stopProcessing="true">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="api/{R:1}" />
        </rule>
        <rule name="Fallback for Encoded URLs" stopProcessing="true">
          <match url="^Post/(.*)" />
          <action type="Rewrite" url="Post/{R:1}" />
        </rule>
     <rule name="Rewrite Requests to Blog UI" stopProcessing="true">
          <match url="^Blog/(.*)" />
          <action type="Rewrite" url="Blog/{R:1}" />
        </rule>
     <rule name="Rewrite Requests to Blog Api" stopProcessing="true">
          <match url="^Blog/api/(.*)" />
          <action type="Rewrite" url="Blog/api/{R:1}" />
        </rule>
        <rule name="Rewrite Requests to BETA API" stopProcessing="true">
          <match url="^BETA/api/(.*)" />
          <action type="Rewrite" url="BETA/api/{R:1}" />
        </rule>
        <rule name="Rewrite Requests to BETA Env" stopProcessing="true">
          <match url="^BETA/web(.*)" />
          <action type="Rewrite" url="BETA/web/{R:1}" />
        </rule>
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
          </conditions>
          <action type="Rewrite" url="index.html" />
        </rule>

        <rule name="SubSiteMap" stopProcessing="true">
<match url="^BETA/web/sitemap/(\d{2})-(\d{4})\.xml" />
<conditions logicalGrouping="MatchAll" trackAllCaptures="false" />
<action type="Rewrite" url="BETA/api/api/Sitemap/GetSubSitemapFile?month={R:1}&amp;year={R:2}" />
</rule>
<rule name="Rewrite Sitemap File" stopProcessing="true">
<match url="^BETA/web/sitemap.xml" />
<conditions logicalGrouping="MatchAll" trackAllCaptures="false" />
<action type="Rewrite" url="BETA/api/api/Sitemap/GetMainSitemapFile" />
</rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>